// Place your settings in this file to overwrite the default settings
{
  "breadcrumbs.enabled": true,
  "breadcrumbs.filePath": "on",
  "breadcrumbs.symbolPath": "on",

  // Editor:
  "editor.cursorSurroundingLines": 3,
  "editor.useTabStops": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.tabCompletion": "on",
  "editor.wordWrap": "on",
  // "editor.rulers": [80, 100, 120],
  "editor.roundedSelection": false,
  "editor.minimap.enabled": false,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.maxColumn": 100,
  "editor.renderLineHighlight": "gutter",
  "editor.renderWhitespace": "boundary",
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "editor.fontFamily": "FiraCode-Retina",
  "editor.fontLigatures": "'calt', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'zero', 'onum'",
  "editor.fontSize": 16,
  "editor.lineHeight": 26,
  "editor.dragAndDrop": false,
  "editor.glyphMargin": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "editor.unicodeHighlight.allowedCharacters": {
    "a": true,
    "а": true,
    "А": true,
    "б": true,
    "В": true,
    "е": true,
    "Е": true,
    "з": true,
    "З": true,
    "і": true,
    "І": true,
    "н": true,
    "Н": true,
    "о": true,
    "р": true,
    "Р": true,
    "с": true,
    "у": true,
    "У": true
  },

  // Files:
  "files.autoSave": "onWindowChange",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/.cache": true,
    "**/.data": true,
    "**/.DS_Store": true,
    "**/__pycache__": true,
    "**/.idea": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/.venv": true,
    "**/.coverage": true,
    "**/*.py[co]": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/.tmp": true,
    "**/build/": true,
    "**/CVS": true,
    "**/dist/": true,
    "**/node_modules/": true,
    "**/www/": true,
    "package-lock.json": true
  },

  "files.associations": {
    ".babelrc": "jsonc",
    ".eslintrc": "jsonc",
    ".stylelintrc": "json",
    ".prettierrc": "json",
    ".tslintrc": "json",
    "*.geojson": "json",
    ".sequelizerc": "javascript",
    "*.pyi": "python",
    "*.bats": "shellscript",
    "dockerfile.*": "dockerfile",
    "*.tsx": "typescriptreact",
    "*.env.*": "dotenv"
  },

  "search.exclude": {
    "**/bower_components": true,
    "**/node_modules": true,
    "**/node_modulesDISABLE": true,
    "package-lock.json": true,
    "yarn.lock": true
  },

  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.showInlineOpenFileAction": false,
  "git.autorefresh": true,
  "git.decorations.enabled": true,
  "workbench.iconTheme": "pop-icon-theme",
  "workbench.settings.editor": "json",
  "workbench.settings.useSplitJSON": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.labelFormat": "short",

  "workbench.editorAssociations": {
    "*.ipynb": "jupyter.notebook.ipynb"
  },

  "window.titleBarStyle": "native",
  "window.zoomLevel": 0,

  // Stats and telemetry:
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,

  "terminal.integrated.rendererType": "dom",
  "terminal.integrated.defaultProfile.osx": "/usr/local/bin/fish",
  "terminal.integrated.showExitAlert": false,

  // Tools, extensions, and languages:
  "python.linting.pylintEnabled": true,
  "python.linting.pycodestyleEnabled": false,
  // "python.pythonPath": "${workspaceFolder}/.venv/bin/python3",
  "python.pythonPath": "/usr/local/bin/python3",

  //JavaScript
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.preferences.quoteStyle": "single",
  "javascript.suggest.autoImports": true,
  //TypeScript
  "typescript.tsserver.log": "off",
  "typescript.preferences.quoteStyle": "single",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.suggest.autoImports": true,

  "gitlens.codeLens.enabled": true,
  "gitlens.keymap": "alternate",

  "prettier.semi": false,
  // eslint
  "eslint.alwaysShowStatus": true,
  "eslint.format.enable": true,
  // Todo tree
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]"
  ],
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
  // tsEssentialPlugins
  "tsEssentialPlugins.fixSuggestionsSorting": true,
  "tsEssentialPlugins.globalLibCompletions.action": "mark",
  "tsEssentialPlugins.patchOutline": true,
  "tsEssentialPlugins.outline.arraysTuplesNumberedItems": true,
  "tsEssentialPlugins.renameImportNameOfFileRename": true,
  "tsEssentialPlugins.signatureHelp.excludeBlockScope": true,
  "tsEssentialPlugins.skipNodeModulesReferences": true,
  "tsEssentialPlugins.suggestions.localityBonus": true,
  "tsEssentialPlugins.tupleHelpSignature": true,
  "tsEssentialPlugins.jsxEmmet.modernize": true,
  "tsEssentialPlugins.arrayMethodsSnippets.enable": true,
  //Code Spell
  "cSpell.enabled": true,
  "cSpell.enableFiletypes": [
    "!asciidoc",
    "!c",
    "!cpp",
    "!csharp",
    "!go",
    "!handlebars",
    "!haskell",
    "!jade",
    "!java",
    "!latex",
    "!php",
    "!pug",
    "!python",
    "!restructuredtext",
    "!rust",
    "!scala",
    "!scss"
  ],
  "cSpell.language": "en,tr",
  "cSpell.userWords": [
    "chakra",
    "firestore",
    "middlewares",
    "prefetch",
    "rocketseat",
    "upsert"
  ],
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },

  "editor.accessibilitySupport": "off",
  "editor.guides.indentation": true,
  "editor.unicodeHighlight.allowedLocales": {
    "tr": true
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "svg.preview.mode": "svg",
  "[css]": {
    "editor.defaultFormatter": "stylelint.vscode-stylelint"
  },
  // markdownlint
  "markdownlint.config": {
    "MD033": {
      "allowed_elements": ["img", "p", "a", "details", "summary"]
    }
  },
  "totalTypeScript.hiddenTips": [
    "generic-slots-in-functions",
    "passing-generics-to-types",
    "omit-utility-type",
    "type-alias-with-generics"
  ],
  "vite.autoStart": false,
  "workbench.colorTheme": "One Dark Pro Darker",
  "telemetry.telemetryLevel": "off",
  "diffEditor.ignoreTrimWhitespace": false,
  "chat.agent.enabled": true,
  "editor.language.brackets": [
    {
      "open": "[",
      "close": "]",
      "notIn": ["string", "comment"]
    },
    {
      "open": "{",
      "close": "}",
      "notIn": ["string", "comment"]
    },
    {
      "open": "(",
      "close": ")",
      "notIn": ["string", "comment"]
    },
    {
      "open": "<",
      "close": ">",
      "notIn": ["string", "comment"]
    }
  ],
  "editor.linkedEditing": true,
  "editor.smoothScrolling": true,
  "diffEditor.experimental.showMoves": true,
  "diffEditor.experimental.useTrueInlineView": true,
  "files.trimFinalNewlines": true,
  "extensions.closeExtensionDetailsOnViewChange": true,
  "editor.showFoldingControls": "always",
  "terminal.integrated.gpuAcceleration": "off",
  "editor.colorDecorators": false,
  "workbench.preferredDarkColorTheme": "Default Dark+",
  "editor.bracketPairColorization.enabled": false,
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "typescript": false
  }
}
